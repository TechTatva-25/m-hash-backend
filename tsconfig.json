{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": false,
    "removeComments": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*","types/**/*"],
  "exclude": ["node_modules", "dist"]
}
